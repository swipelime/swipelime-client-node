{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"moduleResolution": "node",
		"paths": { "swipelime-client-node": ["."] },
		"skipLibCheck": true,
		"strict": true,
		"module": "commonjs",
		"outDir": "dist",
		"target": "esnext"
    },
    "compileOnSave": false,
    "exclude": ["dist", "node_modules"],
    "include": ["src", "examples"]
}
